{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ controller_name }}</h1>
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                {% if is_granted('ROLE_ADMIN') %}
                {% set userDeleteForm = userDeleteFormObject.createView %}
                {{ form_start(userDeleteForm, {'action': path('deleteAllMessagesFromPoster'), 'method': 'POST'}) }}

                {{ form_end(userDeleteForm) }}
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}
